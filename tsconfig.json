{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Habilitar todas las opciones de comprobaci√≥n estricta
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": false,
    "experimentalDecorators": true, // Habilitar los decoradores experimentales
    "emitDecoratorMetadata": true // Emitir metadatos de decoradores
  }
}
